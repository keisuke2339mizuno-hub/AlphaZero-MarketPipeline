name: Daily Data Fetch

on:
  schedule:
    - cron: "30 0 * * *"   # UTC 00:30 = 日本時間 09:30 に毎日実行
  workflow_dispatch: {}     # 手動実行ボタンも付けておく

jobs:
  fetch-and-commit:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repo
        uses: actions/checkout@v4

      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: "3.11"

      - name: Install deps
        run: |
          python -m pip install --upgrade pip
          pip install yfinance==0.2.40 pandas requests pytz

      - name: Run fetch_data.py
        run: python fetch_data.py

      - name: Commit & push if changed
        run: |
          git config user.name "github-actions[bot]"
          git config user.email "41898282+github-actions[bot]@users.noreply.github.com"
          if [ -n "$(git status --porcelain)" ]; then
            git add -A
            git commit -m "auto: update market snapshot $(date -u +'%Y-%m-%dT%H:%M:%SZ')"
            git push
          else
            echo "No changes."
          fi
